<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.cardItemStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/inner_margin">

            <TextView
                android:id="@+id/tvDistrictName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="District Name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/districtNameTextSize"
                android:layout_marginBottom="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tvDistrictPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/districtValueTextSize"
                    tools:text="Positive"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_positive_emoji"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvDistrictNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/districtValueTextSize"
                    tools:text="Negative"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_negative_emoji"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvDistrictDeaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/districtValueTextSize"
                    tools:text="Deaths"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_death_emoji"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnDistrictDetail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/detail"
                android:textSize="12sp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>